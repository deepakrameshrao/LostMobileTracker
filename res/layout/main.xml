<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
    	android:id="@+id/headerbutton"
    	android:textColor="#ffffffff"
    	android:text="Set alternate phone numbers to send a message, in case your mobile is lost"
    	android:textSize="20dip"
    	android:paddingLeft="10dip"
    	android:paddingRight="5dip"
    	android:background="@drawable/lostmobilephone"
    	android:layout_marginTop="10dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:layout_width="fill_parent"
    	android:layout_height="80dip"
    >
    </Button>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/tracking"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<EditText
		android:id="@+id/PhoneNumber1"
		android:layout_marginTop="30dip"
		android:phoneNumber="true"
		android:textColor="#ff00ffff"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Enter alternate phone number 1">
	</EditText>
	
	<EditText
		android:id="@+id/PhoneNumber2"
		android:layout_marginTop="10dip"
		android:phoneNumber="true"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Enter alternate phone number 2">
	</EditText>
	
	<EditText
		android:id="@+id/PIN"
		android:layout_marginTop="10dip"
		android:password="true"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:hint="Enter lock PIN">
	</EditText>
	
	<Button
    	android:id="@+id/donebutton"
    	android:text="Done"
    	android:layout_gravity="center"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    </Button>
    
</LinearLayout>
</LinearLayout>
